# ============================================
# EILYA'S LOCAL ENVIRONMENT CONFIGURATION
# ============================================
# Use this when running the application on Eilya's machine
#
# IMPORTANT:
# - Eilya database → localhost (your local MySQL)
# - Other databases → Remote IPs or SSH tunnels
# ============================================

APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============================================
# DATABASE CONNECTIONS
# ============================================

# EILYA - Stray Reporting (LOCAL - YOUR DATABASE)
# This runs on YOUR machine (localhost)
DB1_HOST=127.0.0.1
DB1_PORT=3307
DB1_DATABASE=workshop2
DB1_USERNAME=root
DB1_PASSWORD=

# ATIQAH - Shelter Management (REMOTE)
DB2_HOST=ATIQAH_IP_ADDRESS_HERE
DB2_PORT=3308
DB2_DATABASE=workshop
DB2_USERNAME=root
DB2_PASSWORD=

# SHAFIQAH - Animal Management (REMOTE)
DB3_HOST=SHAFIQAH_IP_ADDRESS_HERE
DB3_PORT=3309
DB3_DATABASE=workshop
DB3_USERNAME=root
DB3_PASSWORD=

# DANISH - Booking & Adoption (REMOTE)
DB4_HOST=DANISH_IP_ADDRESS_HERE
DB4_PORT=1434
DB4_DATABASE=workshop
DB4_USERNAME=sa
DB4_PASSWORD=

# TAUFIQ - User Management (REMOTE)
DB5_HOST=TAUFIQ_IP_ADDRESS_HERE
DB5_PORT=5434
DB5_DATABASE=workshop
DB5_USERNAME=postgres
DB5_PASSWORD=

# Backup Database (if needed)
BACKUP_DB_HOST=127.0.0.1
BACKUP_DB_PORT=5432
BACKUP_DB_DATABASE=backup_system
BACKUP_DB_USERNAME=postgres
BACKUP_DB_PASSWORD=password

# ============================================
# DEVELOPMENT WORKFLOW FOR EILYA
# ============================================
#
# 1. Start your local MySQL database on port 3307
# 2. Run migrations for YOUR database only:
#    php artisan db:fresh-one eilya --seed
#
# 3. When working with full application:
#    - Make sure SSH tunnels to remote databases are active
#    - OR ensure remote databases are accessible via network
#    - OR work offline (some features will be limited)
#
# 4. To work offline (only your database):
#    - Controllers will gracefully handle offline databases
#    - Only Stray Reporting features will work fully
# ============================================

TOYYIBPAY_KEY=
TOYYIBPAY_CATEGORY=

SESSION_DRIVER=file
SESSION_LIFETIME=120

CACHE_STORE=file
QUEUE_CONNECTION=database
